<script>
  let counter = 0;
  const increment = () => {
	counter += 3;
	decrement();
  }
  const decrement = () => counter--;

  function square(value) {
	return value * value
  }
</script>

<button on:click={increment}>Increment</button>
<h1 class="test-class">{counter} ^ 2 = {square(counter)}</h1>
<button on:click={decrement}>Decrement</button>
